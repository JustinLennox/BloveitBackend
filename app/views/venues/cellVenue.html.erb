<p id="notice"><%= notice %></p>

<h1>Listing Venues</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date Type</th>
      <th>Mood</th>
      <th>Price Rating</th>
      <th>Neighborhood</th>
      <th>Address</th> 
      <th>Polaroid description</th>
      <th>Blove Count</th>
      <th>Specials</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= "Dinner", venue.dinner %></td>
        <td><%= venue.mood %></td>
        <td><%= venue.price_rating %></td>
        <td><%= venue.neighborhood %></td>
        <td><%= venue.address %></td>
        <td><%= venue.polaroid_description %></td>
        <td><%= venue.blove_count %></td>
        <td><%= link_to 'Show', venue %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Venue', new_venue_path %>